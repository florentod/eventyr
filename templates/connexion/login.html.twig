          </div>
          <!-- Welcome Text End --> 
          
          <!-- Login Form
		  ========================= -->
          <div class="col-md-4 d-flex align-items-center py-5">
            <div class="container my-auto py-4 shadow-lg bg-white">
              <div class="row">
                <div class="col-11 col-lg-11 mx-auto">
                  <h3 class="text-9 font-weight-600 text-center mt-2 mb-3">Se connecter</h3>
                  <p class="text-center mb-4">Devenir membre ? <a class="btn-link" href="register.html"><u>Créer un compte</u></a></p>
                  <form id="loginForm" method="post">
                    <div class="form-group">
                      <input type="email" class="form-control rounded-0" id="emailAddress" required placeholder="Saisir votre Email">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control rounded-0" id="loginPassword" required placeholder="Saisir votre mot de passe">
                    </div>
                    <div class="row">
                      <div class="col-sm">
                        <div class="form-check custom-control custom-checkbox">
                          <input id="remember-me" name="remember" class="custom-control-input" type="checkbox">
                          <label class="custom-control-label rounded-0" for="remember-me">Se souvenir de moi</label>
                        </div>
                      </div>
                    </div>
                    <button class="btn btn-dark btn-block rounded-0 my-4" type="submit">Se connecter</button>
                  </form>
                  <div class="d-flex align-items-center my-3">
                    <hr class="flex-grow-1">
                    <span class="mx-2 text-2 text-muted">Se connecter avec</span>
                    <hr class="flex-grow-1">
                  </div>
                  <div class="form-row mb-3">
                    <div class="col-4">
                      <button type="button" class="btn btn-outline-facebook btn-sm btn-block border-2 rounded-0 shadow-none"><span class="mr-2"><i class="fab fa-facebook-f"></i></span>Facebook</button>
                    </div>
                    <div class="col-4">
                      <button type="button" class="btn btn-outline-google btn-sm btn-block border-2 rounded-0 shadow-none"><span class="mr-2"><i class="fab fa-google"></i></span>Google</button>
                    </div>
                    <div class="col-4">
                      <button type="button" class="btn btn-outline-apple btn-sm btn-block border-2 rounded-0 shadow-none"><span class="mr-2"><i class="fab fa-apple"></i></span>Apple</button>
                    </div>
                  </div>
                  <p class="text-center">Vous avez oublié votre <a class="btn-link" href="forgot-Password.html"><u>mot de passe</u></a> ?</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Login Form End -->   
          <a href="index.html">index</a>
        </div>
